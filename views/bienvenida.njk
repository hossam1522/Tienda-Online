{% extends "base.njk" %}

{% block title %}Bienvenido{% endblock %}

{% block additional_styles %}
    <style>
        body {
            background-color: #f8f9fa;
        }
        .welcome-container {
            max-width: 600px;
            margin: 100px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            text-align: center;
        }
    </style>
{% endblock %}

{% block nav_items %}
    <li class="nav-item">
        <a class="nav-link" href="/logout">Cerrar Sesión</a>
    </li>
{% endblock %}

{% block content %}
    <div class="welcome-container">
        <h2>Bienvenido, {{ username }}!</h2>
        <p>Gracias por iniciar sesión en nuestra plataforma.</p>
        <a href="/" class="btn btn-custom">Ir a la página principal</a>
    </div>
{% endblock %}
